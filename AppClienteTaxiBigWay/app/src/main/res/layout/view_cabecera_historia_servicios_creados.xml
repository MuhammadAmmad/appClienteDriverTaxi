<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimenCinco"
        android:layout_marginLeft="@dimen/dimenCinco"
        android:layout_marginRight="@dimen/dimenCinco"
        android:layout_marginBottom="@dimen/dimenCinco"
        android:layout_gravity="center_horizontal">
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:id="@+id/imageButtonSearch"
            android:src="@drawable/ic_search_black_24dp"
            android:background="@drawable/selector_serch"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:id="@+id/editHistoriaServiciosCreados"
            android:hint="Fecha"
            android:background="@drawable/selector_fond_border"
            android:textColor="@color/grease"
            android:textColorHint="#afafaf"
            android:enabled="false"
            android:gravity="center"
            android:layout_weight="0.20" />

        <CheckBox
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Fecha"
            android:paddingLeft="10dp"
            android:textColor="@color/grease"
            android:button="@drawable/selector_radio_button"
            android:id="@+id/chxFecha" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="@dimen/dimenCinco"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#d5ff73b4"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftDiez"
                android:textSize="@dimen/dimenSizeTexCabecera"
                android:text="PENDIENTE"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#2788f1"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/dimenSizeTexCabecera"
                android:text="TERMINDO"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#d16cda"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftDiez"
                android:textSize="@dimen/dimenSizeTexCabecera"
                android:text="TOMADO"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#f50f8d"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/dimenSizeTexCabecera"
                android:text="CANCELADO"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#04c434"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftDiez"
                android:textSize="@dimen/dimenSizeTexCabecera"
                android:text="EN CURSO"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#ebc802"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/dimenSizeTexCabecera"
                android:text="NO TERMINADO"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



</android.support.v7.widget.CardView>