<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nucleosis.www.appdrivertaxibigway.MapsConductorClienteServicio"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:title="@string/UbicacionCliente"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:id="@+id/LinearFragment">
            <fragment
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"
                tools:context=".MapsConductorClienteServicio"
                android:name="com.google.android.gms.maps.MapFragment">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:paddingBottom="25dp"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnAdicionales"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:background="@drawable/selector_buton_adicionales"
                            android:textColor="@color/white"
                            android:textSize="16dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:visibility="visible"
                            android:background="@drawable/selector_button_cliente_encontrado"
                            android:id="@+id/btnClienteEncontrado"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:visibility="visible"
                            android:background="@drawable/selector_button_servicio_terminado_ok"
                            android:id="@+id/btnServicioTerminadoOk"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:visibility="visible"
                            android:background="@drawable/selector_button_ir_a_servicios"
                            android:id="@+id/btnIrA_Servicios"/>
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="ACTIVAR TURNO"
                        android:visibility="gone"
                        android:textColor="#f9f4f4"
                        android:textSize="22dp"
                        android:id="@+id/btnActivarTurno"
                        android:background="@drawable/selector_buttons_translucer"
                        android:layout_gravity="center_horizontal" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:text="SALIR DE TURNO"
                        android:visibility="gone"
                        android:textSize="22dp"
                        android:textColor="#f9f4f4"
                        android:id="@+id/btnDesactivarTurno"
                        android:background="@drawable/selector_buttons_translucer"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </fragment>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
