<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="208dp"
    android:gravity="center">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp" />
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimenCinco"
        android:id="@+id/LinearLayoutLogin"
        android:layout_gravity="center_horizontal"
        android:fitsSystemWindows="true">

        <EditText
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRigth"
            android:paddingLeft="@dimen/dimenCinco"
            android:drawableLeft="@mipmap/ic_account_circle_"
            android:textColorHint="@color/hinWhite"
            android:inputType="number"
            android:ems="10"
            android:maxLength="8"
            android:background="@drawable/selector_edittext"
            android:hint="@string/usuario"
            android:id="@+id/editUser"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRigth"
            android:paddingLeft="@dimen/dimenCinco"
            android:layout_marginTop="@dimen/marginLeftDiez"
            android:drawableLeft="@mipmap/ic_lock_open_black_"
            android:textColorHint="@color/hinWhite"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:background="@drawable/selector_edittext"
            android:ems="10"
            android:id="@+id/editPass"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRigth"
            android:layout_marginTop="15dp"
            android:text="@string/SigIn"
            android:textColor="@color/white"
            android:id="@+id/btnLoginDriver"
            android:background="@drawable/selector_buton"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>